{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "biomejs.biome",
    "files.exclude": {
        "frontend/node_modules": true,
        "**/coverage": true,
        "**.pem": true,
        "**/package-lock.json": true,
        "senior-design/**": true,
        "frontend/**.pem": true,
        "frontend/dist": true,
        "frontend/postcss.config.js": true,
        "frontend/vite-env.d.ts": true,
        "frontend/index.html": true,
        ".github": true,
        "**/Properties": true,
        "backend/**/.editorconfig": true,
        "backend/**/*.csproj": true,
        "backend/**/*.sln": true,
        "backend/**/bin": true,
        "backend/**/Database": true,
        "backend/**/DependencyInjection": true,
        "backend/**/DotEnv.cs": true,
        "backend/**/global.json": true,
        "backend/**/Migrations": true,
        "backend/**/obj": true,
        "backend/**/Program.cs": true,
        "backend/**/Security": true
    },
    "scm.compactFolders": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true
}
